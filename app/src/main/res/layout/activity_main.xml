<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    tools:context="app.movie.tutorial.com.activity.MainActivity">

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/back"
        android:text ="Sample Text"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"

        />
    <TextView
        android:id="@+id/repositories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintLeft_toLeftOf="@+id/user_image"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/repositories"
        app:layout_constraintLeft_toLeftOf="@+id/user_image"
        app:layout_constraintRight_toRightOf="parent"      />
    <Button
        android:id="@+id/button"
        android:width="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_history"
        android:onClick="GameHistory"
        app:layout_constraintTop_toBottomOf="@+id/following"
        app:layout_constraintLeft_toLeftOf="@+id/user_image"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
