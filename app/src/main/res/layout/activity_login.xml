<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_layout"
    android:orientation="vertical"
    tools:context="app.movie.tutorial.com.activity.LoginActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_maze_game"
        android:textSize="50sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/user_tag"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/user"
        android:textColor="#FF0000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/user_text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:width="220dp"
        app:layout_constraintTop_toBottomOf="@+id/user_tag" />

    <TextView
        android:id="@+id/password_tag"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="#FF0000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:width="220dp"
        app:layout_constraintTop_toBottomOf="@+id/password_tag" />
    <Button
        android:id="@+id/button"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:width="220dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_name"
        android:onClick="ExecuteLogin"/>
</LinearLayout>
